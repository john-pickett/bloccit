<h1>All Questions</h1>

<%= link_to "Add a Question", new_question_path %>

<% @questions.each do |q| %>
  <div class="media">
    <div class="media-body">
      <h4 class="media-heading">
        <%= link_to q.title, q %>
        <%= if q.resolved == true
            "Resolved"
          else
            "Not Resolved"
          end %>
      </h4>
    </div>
  </div>
<% end %>
